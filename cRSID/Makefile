#cRSID makefile
VERSION=1.2

CC=gcc

APPNAME = crsid
APPSOURCE = cRSID.c

CRSID_PLATFORM_PC = 1
CRSID_PLATFORM = $(CRSID_PLATFORM_PC)
BACKEND_IDS = -DCRSID_PLATFORM=$(CRSID_PLATFORM_PC)

ifeq ($(CRSID_PLATFORM),$(CRSID_PLATFORM_PC))
DEFINES = -DCRSID_PLATFORM_PC -DVERSION=\"$(VERSION)\"
CCFLAGS = `sdl-config --cflags --libs`  -lSDL -lm  -O2  -s
endif

$(APPNAME): $(APPSOURCE)
	$(CC)  $(APPSOURCE)  -o crsid  $(DEFINES) -DLINUX  $(CCFLAGS)
